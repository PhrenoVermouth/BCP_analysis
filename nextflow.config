// nextflow.config

params {
    // Input/ Output
    input = 'samples.csv'
    outdir = 'results'

    // STARsolo Para
    soloType = 'Droplet'
    soloCBwhitelist = '/path/to/737K-august-2016.txt' // TBD
    soloUMIfiltering = 'MultiGeneoMates 0.5 0.5 0.5'

    // Scanpy QC 
    min_genes_per_cell = 600
    min_cells_per_gene = 3
    max_genes_per_cell = 6000
    max_counts_per_cell = 20000
    max_mito_percent = 0.2 
    mito_prefixes = "'mt-'" 
}

// Environment
process {
    conda = "$baseDir/bin/environment.yml" 
}

// conda profile
profiles {
    conda {
        process.conda = "$baseDir/bin/environment.yml"
        conda.useMamba = true 
    }
}
